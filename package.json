{
  "name": "react-component-boilerplate",
  "version": "0.1.1",
  "description": "React component boilerplate",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && ./node_modules/.bin/tsc",
    "test": "./node_modules/.bin/jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__spec__/.*\\.(ts|tsx|js)$"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sue71/react-component-boilerplate"
  },
  "keywords": [
    "typescript",
    "javascript",
    "react",
    "form"
  ],
  "author": "sue71",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-options": "^3.2.4",
    "@storybook/cli": "^3.2.5",
    "@storybook/react": "^3.2.5",
    "@types/enzyme": "^2.8.6",
    "@types/jest": "^20.0.6",
    "@types/react": "^16.0.2",
    "@types/react-dom": "^15.5.2",
    "babel": "^6.5.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "enzyme": "^2.9.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.30.1",
    "html-webpack-template": "^5.6.0",
    "jest": "^20.0.4",
    "react-test-renderer": "^15.6.1",
    "ts-jest": "^20.0.10",
    "ts-loader": "^2.3.3",
    "typescript": "^2.2.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  }
}
